<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/white_buttonww"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <RelativeLayout
            android:id="@+id/imgholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/imageViewadd"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:srcCompat="@drawable/ic_home"
                android:background="@drawable/white_buttonwwdark"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/imgholder">

            <TextView
                android:id="@+id/rupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="â‚¹"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/priceadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:text="Price"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/rupee"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/titleadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Title"
                android:textSize="20sp"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/typeadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Type"
                android:textSize="20sp"
                android:layout_below="@+id/titleadd"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/accomodationfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="For"
                android:textSize="20sp"
               android:layout_below="@+id/titleadd"
                android:layout_toLeftOf="@+id/accgender"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/accgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="avaFor"
                android:textSize="20sp"
                android:layout_below="@+id/titleadd"
                android:layout_alignParentRight="true"
                android:textColor="#000000"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>