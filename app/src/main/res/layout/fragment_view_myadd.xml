<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/btn_update"
    android:background="@drawable/white_buttonww">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/xxxxxx"
        android:layout_marginBottom="5dp"
        android:background="@drawable/white_buttonww">
        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/property_images_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
     />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xxxxxx"
        android:background="@android:color/transparent"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/down1"
            android:background="@drawable/white_buttonww">
            <TextView
                android:id="@+id/rupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="â‚¹"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/addPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/rupee"
                android:layout_marginTop="8dp"/>
            <RadioGroup
                android:id="@+id/addaccomodationtype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hostel"
                    android:id="@+id/myaddhostel"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PG"
                    android:id="@+id/myaddpg"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat/House"
                    android:id="@+id/myaddFlatHouse"
                    />
            </RadioGroup>
            <TextView
                android:id="@+id/vvvvvvvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="18sp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="13dp"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/addaccomodationtype1"/>
            <EditText
                android:id="@+id/addTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"
                android:layout_below="@+id/addPrice1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/down2"
            android:layout_below="@+id/down1"
            android:layout_marginTop="5dp"
            android:background="@drawable/white_buttonww"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <TextView
            android:id="@+id/Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/addDescription1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="15sp"
            android:layout_below="@+id/Details"
            android:layout_marginLeft="40dp"

            android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/accxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avaliable for"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_below="@id/addDescription1"/>

        <RadioGroup
            android:id="@+id/addaccomodationFor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/accxx"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/myaddMale"
                android:textSize="15sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/myaddFemale"
                android:textSize="15sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both"
                android:id="@+id/myaddBoth"
                android:textSize="15sp"
                />
        </RadioGroup>
            <TextView
                android:id="@+id/addxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_below="@id/addaccomodationFor1"/>
        <EditText
            android:id="@+id/addaddress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="15sp"
            android:layout_below="@+id/addxx"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addaddress1"
                android:text="Selected Images"
                android:layout_marginLeft="15dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_below="@+id/textView"
                android:id="@+id/btn_selectimages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/white_rounded_button"
                android:padding="12dp"
                android:text="Select Images" />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_below="@+id/btn_selectimages"
                android:id="@+id/btn_deleteAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/white_rounded_button"
                android:padding="12dp"
                android:text="Delete Add" />



        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_button"
        android:padding="12dp"
        android:text="Update"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>