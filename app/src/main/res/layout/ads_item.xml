<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/white_buttonww"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >
        <RelativeLayout
            android:id="@+id/imgholder"
            android:layout_width="150dp"
            android:layout_height="match_parent"

            >
            <ImageView
                android:id="@+id/imageViewadd"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:srcCompat="@drawable/ic_home"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgholder">

            <TextView
                android:id="@+id/rupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="â‚¹"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/priceadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/rupee"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/priceadd"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/typeadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleadd"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Type"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/accomodationfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typeadd"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="For"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/accgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typeadd"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/accomodationfor"
                android:text="avaFor"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>